@model QRCodeEvidentationApp.Models.LectureGroup

@{
ViewData["Title"] = "Details";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lecture Group Details</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-black text-white">
            <h4 class="card-title">Lecture Group Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2 text-muted">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <dl class = "row">

            <dt class="col-sm-2 text-muted">
                Courses:
            </dt>
            <dd class="col-sm-9">
                <div class="mt-3">
                    @foreach (var item in Model.Courses)
                    {
                        <div class="mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">
                                        @Html.DisplayFor(modelItem => item.Course.LastNameRegex)
                                    </h5>
                                    <a href="@Url.Action("Details", "Courses", new { id = item.Course.Id })" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </dd>
        </dl>
    </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
</div>
